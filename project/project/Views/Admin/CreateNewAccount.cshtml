@using Microsoft.AspNetCore.Identity
@using project.Models

@model project.Models.AccountViewModels.RegisterWorkerViewModel
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create a new account";
}

<div>
    <form asp-controller="Admin" asp-action="CreateNewAccount" method="post" style="width:350px">
        <h4>Create a new account for workers.</h4>
        <hr />
        <div class="form-group">
            <label asp-for="FirstName" style="width:185px; display:inline-block;"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" style="width:185px; display:inline-block;"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" style="width:185px; display:inline-block;"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <button type="submit" class="btn btn-default" style="float:right;">Create</button>
        <a asp-action="Index" asp-controller="Admin">Go back to admin page</a>
    </form>
</div>
