@using Microsoft.AspNetCore.Identity
@using project.Models

@model IEnumerable<project.Models.Hotel>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="hotelsContainer">
    @foreach (var item in Model)
    {
        <div class="hotelContainer" style="background-image: url('@item.urlToImage');">
            <div class="hotelContainerAlpha">
                <a class="hotelName" asp-controller="Hotel" asp-action="HotelIndex" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </div>
        </div>
    }
</div>
